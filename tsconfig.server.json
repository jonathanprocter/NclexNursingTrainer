
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
